
@model mapapp.ViewModels.ReviewViewModel

<div class="show-location">

<div class="container">

<br>

<div class="row">
    <div class="col-md-6">
        <h1>@ViewBag.Location.Name</h1>
        <h3>@ViewBag.Location.StreetAdr</h3>
        <h3>@ViewBag.Location.City<span>,</span> @ViewBag.Location.State @ViewBag.Location.Zip</h3>

        <br>
        <hr>

        <h3>Reviews for this Location:</h3>
        <br>
        <h4 class="text-success">Average Rating: @ViewBag.LocRating</h4>

        <div class="well">
        <form asp-controller="Location" asp-action="AddReview" class="form">
            <input type="hidden" name="LocationId" value="@ViewBag.Location.LocationId">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <select asp-for="Rating" name="Rating" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <textarea class="form-control" placeholder="Write a short message..." asp-for="Message"></textarea>
            </div>

            <hr>

            <input type="submit" class="btn btn-block btn-primary" value="Create">
        </form>
    </div>
        
        <ul class="list-group">
            
            @foreach(var review in @ViewBag.reviews)
            {
                <li class="list-group-item">-@review.Reviewer.Username <br/>Rating: @review.Rating <br/>@review.Message</li>
            }
        </ul>

    </div>
    <div class="col-md-6">
        <img class="location-place-img" src="//placehold.it/600x600" alt="">
    </div>
</div>

</div>

</div>


